<h1>Listing items</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Image url</th>
    <th>Bbl</th>
    <th>Vendor id</th>
    <th>Vendor item id</th>
    <th>Date discontinued</th>
    <th>Category</th>
    <th>Price</th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%=h item.name %></td>
    <td><%=h item.description %></td>
    <td><%=h item.image_url %></td>
    <td><%=h item.bbl_id %></td>
    <td><%=h item.vendor_id %></td>
    <td><%=h item.vendor_item_id %></td>
    <td><%=h item.date_discontinued %></td>
    <td><%=h item.category_id %></td>
    <td><%=h item.price %></td>

    <td><%= link_to 'Show', item %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Destroy', item, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New item', new_item_path %>
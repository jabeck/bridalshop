<div class="span-18 last">
<h1>Listing items</h1>

<table>
  <tr>
    <th>Bbl Number</th>
    <th>Name</th>
    <th>Has image?</th>
    <th>Vendor</th>
    <th>Vendor Item Number</th>
    <th>Date Discontinued</th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%=h item.bbl_id %></td>
    <td><%=link_to item.name, :action => :show, :id => item %></td>
    <td><% if item.has_image? -%>Yes
            <% else -%> No <% end -%></td>
    <td><%=h item.vendor.name %></td>
    <td><%=h item.vendor_item_id %></td>
    <td><%=h item.date_discontinued %></td>
    
    <td><%= link_to 'Delete', item, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New item', new_item_path %>
</div>
<div class="span-18 last">
<h1>Editing item</h1>

<% form_for(@item) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label "Item Name" %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label "Image_url" %><br />
    <%= f.text_field :image_url %>
  </p>
  <p>
    <%= f.label "BBL_Number" %><br />
    <%= f.text_field :bbl_id %>
  </p>
  <p>
    <%= f.label "Vendor_Item_Number" %><br />
    <%= f.text_field :vendor_item_id %>
  </p>
  <p>
    <%= f.label "Vendor" %><br />
    <%= f.collection_select(:vendor_id, @vendors, :id, :name) %>
  </p>
  <p>
    <%= f.label :date_discontinued %><br />
    <%= f.datetime_select :date_discontinued %>
  </p>
  <p>
    <%= f.label :price %>
    <%= f.text_field :price %>
  </p>
  <p>
    <%= f.label :category_id %>
    <%= f.collection_select(:category_id, @categories, :id, :name) %>
  </p>
  <p>
    <%= f.label :quantity %>
    <%= f.text_field :quantity %>
  </p>
  <p>
    <%= f.label :size %>
    <%= f.text_field :size %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @item %> |
<%= link_to 'Back', items_path %>
</div>
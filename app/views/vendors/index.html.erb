<div class="span-18 last">
	<h1>Vendors
		<span class="prepend-8 last"><%= link_to 'Add New Vendor', new_vendor_path, :style => "font-size: medium;" %></span>
	</h1>

	<table>
		<tr>
		  <th>Name</th>
		  <th>Id</th>
		</tr>

		<% @vendors.each do |vendor| %>
		  <tr>
		    <td><%= link_to vendor.name, :action => :show, :id => vendor %></td>
		    <td><%=h vendor.id %></td>
		    <td><%= link_to 'Edit', edit_vendor_path(vendor) %></td>
		    <td><%= link_to 'Delete', vendor, :confirm => 'Are you sure?', :method => :delete %></td>
		  </tr>
		<% end %>
	</table>

	<br />
</div>
<div class="span-18 last">
	<h1>Listing categories
			<span class="prepend-5 last"><%= link_to 'Add New Category', new_category_path, :style => "font-size: medium;" %></span>
	</h1>

	<table>
	  <tr>
	    <th>Name</th>
	    <th>Id</th>
	  </tr>

	<% @categories.each do |category| %>
	  <tr>
	    <td><%=h category.name %></td>
	    <td><%=h category.id %></td>
	    <td><%= link_to 'Delete', category, :confirm => 'Are you sure?', :method => :delete %></td>
	  </tr>
	<% end %>
	</table>

	<br />
</div>